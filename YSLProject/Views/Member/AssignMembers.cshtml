@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");


    }
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>

    <script>
        $(".desutj").css("display", "none");

        $(document).ready(function () {
            getAssignedMemberList();
            getMemberList();
        })



        function getAssignedMemberList() {
            $('#tblAssigned').DataTable({
            processing: true,
            serverSide: true,
                 searchable: true,
                 destroy: true,
                 "order": [[0, "desc"]],
            ajax: {
                url: '@Url.Action("AssignedMembersFilter", "Member")',
                type: 'POST',
                'data': {
                    "AssignID": $("#UserId option:selected").val()
                },
                "datatype": "json"
                },
                columns: [
                    { data: "firstName", "name": "FirstName"},
                    { data: "lastName", "name": "LastName" },
                    { data: "medicaidID", "name": "MedicaidID" },
                    { data: "residentID", "name": "ResidentID" },
                    { data: "action" }
                ]
         });
        }
          function getMemberList() {
            $('#tblPending').DataTable({
            processing: true,
            serverSide: true,
                 searchable: true,
                 destroy: true,
                 "order": [[0, "desc"]],
            ajax: {
                url: '@Url.Action("AssignMembersFilter", "Member")',
                type: 'POST',
                'data': {
                    "AssignID": $("#UserId option:selected").val()
                },
                "datatype": "json"
                },
                columns: [
                    { data: "firstName", "name": "FirstName"},
                    { data: "lastName", "name": "LastName" },
                    { data: "medicaidID", "name": "MedicaidID" },
                    { data: "residentID", "name": "ResidentID" },
                    { data: "action" }
                ]
         });
        }

        $("#UserName").text("Welcome " + '@ViewBag.UserName');


        $("#UserId").change(function () {
            getAssignedMemberList();
            getMemberList();
        })



        $(document).on('click', '#ReClose', function () {
          
            if ($(this).is(':checked')) {
                isAssignMember(this.value, 1);
            } else {
                isAssignMember(this.value, 0);
            }
            getAssignedMemberList();
        })


        function isAssignMember(MemberId, ischeck) {

            $(".desutj").attr("style", "display:block");
            $.ajax({
                url: '@Url.Action("AssignMemId", "Member")',
                type: "POST",
                data: { "MemberId": MemberId, "ischeck": ischeck, "UserId": $("#UserId").val() },
                success: function (data) {
                    $(".desutj").attr("style", "display:none");
                },
                error: function (Result) {
                }
            });

        }

          $(document).on('click', '#ReOpen', function () {
            
            if ($(this).is(':checked')) {
                isReAssignMember(this.value, 1);
            } else {
                isReAssignMember(this.value, 0);
              }
              
        })


            function isReAssignMember(MemberId, ischeck) {

        $(".desutj").attr("style", "display:block");
        $.ajax({
            url: '@Url.Action("ReAssignMemId", "Member")',
            type: "POST",
            data: { "MemberId": MemberId, "ischeck": ischeck, "UserId": $("#UserId").val()},
            success: function (data) {
                $(".desutj").attr("style", "display:none");
            },
            error: function (Result) {
            }
        });
    }

    </script>
}
