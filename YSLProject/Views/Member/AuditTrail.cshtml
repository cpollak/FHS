@model YSLProject.Models.AuditTrail
@{
    ViewData["Title"] = "Delete Notes";
    Layout = "~/Views/Shared/_Layoutpopup.cshtml";
}

<style>
    .modal-body .btn-row {
        margin-top: 0rem;
        margin-bottom: 0rem;
        padding-top: 15px;
        padding-bottom: 15px;
    }

    .btn-row {
        border-top: 1px solid #ccc;
        text-align: right;
    }
</style>
@using (Html.BeginForm("DeleteFollowup", "Member", FormMethod.Post,
new
{
   enctype = "multipart/form-data"
}))
{
    @Html.HiddenFor(model => model.NoteId)
    @Html.HiddenFor(model => model.MemberId)
    @Html.HiddenFor(model => model.Type)

    <div class="form-horizontal">
        <div>
            <div class="modal-padding">

                <div class="detail-section">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group row">



                        <div class="col-md-9">
                            @Html.LabelFor(model => model.ReasonForDelete, htmlAttributes: new { @class = "control-label " })
                            @Html.TextAreaFor(model => model.ReasonForDelete, new { htmlAttributes = new { @class = "form-control" }, rows = "2", @style = "width: 100%;" })
                            @Html.ValidationMessageFor(model => model.ReasonForDelete, "", new { @class = "text-danger" })
                        </div>
                    </div>


                </div>

            </div>
        </div>
        <div class="form-group row btn-row">
            <div class=" col-md-12 ">
                <button type="submit" class="btn btn-primary sve"><i class="fa fa-save"></i> Submit</button>
                <a class="btn btn-primary" href="/Member/Workfollow?memberId=@Model.MemberId">Cancel</a>
            </div>
        </div>
    </div>
}
@section Scripts {
    <script>
        $(".sve").click(function () {
            if ($("#ReasonForDelete").val() == "") {
                alert("Reason required...");
                return false;
            }
        });
    </script>
}