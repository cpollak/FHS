@model IEnumerable<YSLProject.Table.MemberMaster>




@{
    ViewData["Title"] = "Index";
}
<style>
    .btn-warning, .btn-danger {
        padding: 3px 1rem;
    }
</style>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.24/datatables.min.css" />

<div class="form-group row">
    <div class="col-md-6">
        <h1>Member List</h1>
    </div>
    <div class="col-md-6" style="text-align:end;">
        @*<a class="btn btn-primary" asp-area="" asp-controller="Member" asp-action="AddMember">Add New</a>*@
    </div>
</div>
@*<p>
        <a asp-action="AddMember">Create New</a>
    </p>*@

<div class="card">
    <div class="card-content collapse show">
        <div class="card-body card-dashboard dataTables_wrapper dt-bootstrap">
            <div class="table-responsive">
                <table class="table table-striped table-bordered" id="example" style="width:100%">
                    <thead>
                        <tr>

                            <th>
                                @Html.DisplayName("First Name")
                            </th>
                            <th>
                                @Html.DisplayName("Last Name")
                            </th>
                            <th>
                                @Html.DisplayName("Email")
                            </th>
                            <th>
                                @Html.DisplayName("Primary Phone")
                            </th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item.FirstName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LastName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PrimaryPhone)
                                </td>
                                <td>
                                    @*  @Html.ActionLink("Followup", "Followup", "Member", new { Id = item.MemberID }, new { @class = "btn btn-primary" }) |*@
                                    @Html.ActionLink("Edit", "EditMember", "Member", new { Id = item.MemberID }, new { @class = "btn btn-warning" }) |
                                    @*@Html.ActionLink("Details", "Details", new { Id = item.UserID }, new { @class = "btn btn-success" }) |*@
                                    @Html.ActionLink("Delete", "DeleteMember", "Member", new { Id = item.MemberID }, new { @class = "btn btn-danger" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>





<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>


<script>

                    $(document).ready(function () {
                        if ('@ViewBag.successmessage' != null) {
                            alert('@ViewBag.successmessage');
                        }
                    })


                    $('#example').DataTable({
                        'paging': true,
                        'lengthChange': true,
                        'searching': true,
                        "order": [],
                        'info': true,
                        'autoWidth': true,
                        'columnDefs': [{
                            'targets': [4],
                            'orderable': false,
                        }]
                    })
</script>
